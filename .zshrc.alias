# ZSH Performance Profiling
zsh-profile-start() {
    ZSH_PROFILE_START=$(gdate +%s.%3N 2>/dev/null || date +%s.%3N)
    echo "â±ï¸  ZSH profiling started..."
}

zsh-profile-end() {
    if [[ -n $ZSH_PROFILE_START ]]; then
        local end_time=$(gdate +%s.%3N 2>/dev/null || date +%s.%3N)
        local elapsed=$(echo "$end_time - $ZSH_PROFILE_START" | bc 2>/dev/null || echo "0")
        echo "â±ï¸  ZSH startup time: ${elapsed}s"

        # Show top 10 slowest loading files
        if [[ -f ~/.zsh_profile_log ]]; then
            echo ""
            echo "ðŸŒ Top 10 slowest loading files:"
            sort -k2 -nr ~/.zsh_profile_log | head -10
            rm ~/.zsh_profile_log
        fi
        unset ZSH_PROFILE_START
    else
        echo "âŒ No profiling session active. Run 'zsh-profile-start' first."
    fi
}

# ZSH Compilation for faster loading
zsh-compile() {
    echo "âš¡ Compiling ZSH files for faster loading..."

    # Compile main ZSH files
    local files=(
        "$HOME/.zshrc"
        "$HOME/.zshrc.alias"
        "$HOME/.zshrc.local"
        "$HOME/.zshrc.private"
        "$HOME/.zshenv"
    )

    for file in "${files[@]}"; do
        if [[ -f "$file" ]]; then
            echo "ðŸ“„ Compiling $file..."
            zcompile "$file" 2>/dev/null || echo "âš ï¸  Failed to compile $file"
        fi
    done

    echo "âœ… ZSH compilation complete!"
    echo "ðŸ’¡ Run 'source ~/.zshrc' to reload"
}

